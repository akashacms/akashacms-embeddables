
{% import "ak_embeddables_macros.njk" as ak_embeddables with context %}

<div 
    {% if embedClass %} class="{{ embedClass }} framed-video-player" {% endif %}
    {% if style %} style="{{ style }}" {% endif %}
    {% if id %} id="{{ id }}" {% endif %} >

    {% if title %}
        <div style="clear: both;"><h3>{{ title }}</h3></div>
    {% endif %}

    <div style="clear: both;" class="embed-responsive embed-responsive-16by9">
        <iframe src="{{ ak_embeddables.youtubeEmbedURL(code, autoplay) }}" type="text/html"></iframe>
    </div>

    {% if description %}
        <div style="clear: both;">{{ description }}</div>
    {% endif %}
</div>

{#
// Documentation: https://stackoverflow.com/questions/2068344/how-do-i-get-a-youtube-video-thumbnail-from-the-youtube-api
#}
<opengraph-image href="https://i.ytimg.com/vi/{{ youtubeCode }}/maxresdefault.jpg"/>
