<img <%
    if (imgclass) {
        %>class="<%= imgclass %>" <%
    }
    
    if (imgwidth) {
        %>width="<%= imgwidth %>" <%
    }
    
    if (imgalign) {
        %>align="<%= imgalign %>" <%
    }
    
    if (style) {
        %>style="<%= style %>" <%
    }
    
    if (alt) {
        %>alt="<%= alt %>" <%
    }
    
    if (title) {
        %>title="<%= title %>" <%
    }
    
    %> src="<%= imgurl %>"/>
